{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/*",
    "src/**/*.js",
    "src/**/*.vue.js",
    "src/components/old/**/*",
    "src/Composables/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": false,
    "skipLibCheck": true
  }
} 